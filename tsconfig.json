{
  "compilerOptions": {
    "target": "ES2021", 
    "module": "commonjs",
    "lib": ["ES2021", "DOM"],    
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
    },
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true, 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}